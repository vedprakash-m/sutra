# Microsoft Entra ID Authentication Configuration
# These values need to be configured for MSAL authentication

# Microsoft Entra ID Client ID (Application ID)
# Get this from Azure Portal > App registrations > Your app > Overview
VITE_ENTRA_CLIENT_ID=00000000-0000-0000-0000-000000000000

# Microsoft Entra ID Tenant ID
# Get this from Azure Portal > Microsoft Entra ID > Overview
# Use 'common' for multi-tenant apps or specific tenant ID for single tenant
VITE_ENTRA_TENANT_ID=common

# Redirect URI for authentication callback
# Should match the URI configured in Azure Portal
VITE_ENTRA_REDIRECT_URI=http://localhost:5173

# API Configuration
# Backend API base URL for development
VITE_API_BASE_URL=http://localhost:7071

# Feature Flags
VITE_USE_LOCAL_API=false
VITE_ENABLE_GUEST_MODE=true
VITE_ENABLE_MOCK_AUTH=true

# Analytics and Monitoring
VITE_ENABLE_ANALYTICS=false
VITE_APPLICATION_INSIGHTS_KEY=

# Development Settings
NODE_ENV=development
