{
  "root": true,
  "env": {
    "browser": true,
    "es2020": true,
    "node": true,
    "jest": true
  },
  "extends": ["eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn"
  },
  "globals": {
    "process": "readonly",
    "__dirname": "readonly",
    "require": "readonly",
    "jest": "readonly"
  },
  "ignorePatterns": ["dist", ".eslintrc.json", "src/**/__mocks__/**"]
}
