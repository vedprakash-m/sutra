# Development Dockerfile for Azure Functions API
# Optimized for local development and E2E testing
FROM mcr.microsoft.com/azure-functions/python:4-python3.12

# Set environment variables for Azure Functions
ENV AzureWebJobsScriptRoot=/home/site/wwwroot \
    AzureFunctionsJobHost__Logging__Console__IsEnabled=true \
    PYTHONPATH=/home/site/wwwroot \
    FUNCTIONS_WORKER_RUNTIME=python \
    AZURE_FUNCTIONS_ENVIRONMENT=Development

# Install system dependencies including curl for health checks
RUN apt-get update && apt-get install -y \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements and install Python dependencies to system site-packages
# (not wwwroot, since that gets volume-mounted in dev/e2e)
COPY requirements-minimal.txt /tmp/requirements-minimal.txt
RUN pip install --upgrade pip && \
    pip install -r /tmp/requirements-minimal.txt

# Copy application code (will be overwritten by volume mount in dev/e2e)
COPY . /home/site/wwwroot

# Set working directory
WORKDIR /home/site/wwwroot

# Expose the default Azure Functions port
EXPOSE 7071

# Health check for container orchestration
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:7071/api/health || exit 1

# Start the Azure Functions host - the base image includes the host at this path
# We need to explicitly start it for standalone Docker (not Azure App Service)
CMD ["/opt/startup/start_nonappservice.sh"]
