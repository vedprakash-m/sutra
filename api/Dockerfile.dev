# Development container for Azure Functions
FROM mcr.microsoft.com/azure-functions/python:4-python3.12

# Install system dependencies for potential compilation needs
RUN apt-get update && apt-get install -y \
    build-essential \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /home/site/wwwroot

# Copy requirements and install dependencies
# Use CI requirements to avoid grpcio compilation issues
COPY requirements-ci.txt requirements.txt ./
RUN pip install --upgrade pip setuptools wheel
RUN pip install --no-cache-dir -r requirements-ci.txt

# Copy function code
COPY . .

# Expose port
EXPOSE 7071

# Start Azure Functions runtime
CMD ["func", "host", "start", "--cors", "*"]
